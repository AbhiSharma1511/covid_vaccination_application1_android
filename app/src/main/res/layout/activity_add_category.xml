<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AddCategory"
    android:background="@color/blue_200">

    <RelativeLayout
        android:id="@+id/relativeToolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar_02">

        <ImageButton
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_person_white"/>

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:text="Add Activity"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleTv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="abc@example.com"
            android:textColor="@color/white" />

    </RelativeLayout>


    <TextView
        android:id="@+id/txtText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeToolbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="22sp"
        android:text="Add Slot For Vaccine"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edtLocation"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtText"
        android:background="@drawable/round_corner"
        android:layout_marginTop="30dp"
        android:hint="Enter Location"
        android:textColorHint="@color/black"
        android:paddingStart="20dp"
        />
    <EditText
        android:id="@+id/edtPincode"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtLocation"
        android:background="@drawable/round_corner"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/black"
        android:hint="Enter Pin Code"
        android:paddingStart="20dp"
        />
    <EditText
        android:id="@+id/edtDate"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtPincode"
        android:background="@drawable/round_corner"
        android:layout_marginTop="20dp"
        android:hint="Enter Date"
        android:paddingStart="20dp"
        />
    <EditText
        android:id="@+id/edtTime"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edtDate"
        android:background="@drawable/round_corner"
        android:layout_marginTop="20dp"
        android:hint="Enter Time Slot"
        android:paddingStart="20dp"
        />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textSize="24sp"
        android:backgroundTint="@color/blue_500"
        android:layout_below="@+id/edtTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
</RelativeLayout>